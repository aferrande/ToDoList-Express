<%- include('../layouts/header', {title: 'Lista de tarefas'}) %> <%-
include('../layouts/menu') %>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-four-fifths">
        <h1 class="title size-4">To Do List</h1>
      </div>
      <div class="column is-one-fifth">
        <a href="/checklists/new" class="button is-success is-small"
          >New List</a
        >
      </div>
    </div>

    <div class="columns">
      <% checklists.forEach(checklist => { %>
      <div class="column is-one-quarter">
        <div class="card has-background-white-ter">
          <div class="card-content">
            <p class="subtitle is-size-5"><%= checklist.name %></p>
            <p class="subtitle is-size-6">
              <%= checklist.tasks.length %> tasks
            </p>
          </div>
          <footer class="card-footer">
            <p class="card-footer-item">
              <span>
                <a href="/checklists/<%= checklist._id %>">Show</a>
              </span>
            </p>
            <p class="card-footer-item">
              <span>
                <a href="/checklists/<%= checklist._id %>/edit">Edit</a>
              </span>
            </p>
            <p class="card-footer-item">
              <span>
                <a
                  href="/checklists/<%= checklist._id %>?_method=delete"
                  class="has-text-danger"
                  >Remove</a
                >
              </span>
            </p>
          </footer>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>
